<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RankActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/logo_main"
            android:layout_margin="20dp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:text="আপনার প্রাপ্ত নম্বর দেখুন"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_green_dark"/>

        <TextView
            android:id="@+id/id_exam_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:text="পরীক্ষার নামঃ ডাটাবেস থেকে নাম"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/id_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:text="প্রাপ্ত নম্বরঃ ডাটাবেস থেকে নাম্বার"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/id_rank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:text="র‍্যাংকঃ ডাটাবেস থেকে"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/id_button_merit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="25dp"
            android:padding="10dp"
            android:text="মেধাতালিকাঃ শীর্ষ ৫০"
            android:textSize="24sp"
            android:background="@android:color/holo_blue_light"
            android:textColor="#ffffff"
            android:textStyle="bold"/>

    </LinearLayout>

</ScrollView>