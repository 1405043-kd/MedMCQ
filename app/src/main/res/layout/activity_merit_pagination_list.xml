<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MeritListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:weightSum="6">
        <TextView
            android:id="@+id/id_rank_merit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="র‍্যাংকঃডাটাবেস থেকে"
            android:textSize="12sp"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/id_name_merit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="নামঃডাটাবেস থেকে"
            android:textSize="12sp"
            android:layout_weight="4"/>

        <TextView
            android:id="@+id/id_number_merit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="প্রাপ্ত নম্বরঃ ডাটাবেস থেকে"
            android:textSize="12sp"
            android:layout_weight="1"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>