<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1ABC9C"
    tools:context=".VarsitySubjectActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/card_view_sub1"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="130dp"
            android:layout_marginBottom="24dp"
            card_view:cardBackgroundColor="#27AE60"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="3dp"
            card_view:contentPadding="4dp"
            android:foreground="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            >

            <FrameLayout
                android:background="#FFFFFF"
                android:layout_width="4dp"
                android:layout_height="match_parent"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:src="@drawable/icons8_potted_plant_96"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/item_image_sub1"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="12dp"
                    />
                <TextView
                    android:text="জীববিজ্ঞান"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:id="@+id/item_title_sub1"
                    android:layout_toEndOf="@+id/item_image_sub1"
                    android:layout_alignParentTop="true"
                    android:textSize="30sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    />

                <TextView
                    android:text="১ম পত্র"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:id="@+id/item_detail_sub1"
                    android:layout_toEndOf="@+id/item_image_sub1"
                    android:layout_below="@+id/item_title_sub1"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    />

            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/card_view_sub2"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            card_view:cardBackgroundColor="#27AE60"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="3dp"
            card_view:contentPadding="4dp"
            android:foreground="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            >

            <FrameLayout
                android:background="#FFFFFF"
                android:layout_width="4dp"
                android:layout_height="match_parent"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:src="@drawable/icons8_octopus_80"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/item_image_sub2"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="12dp"
                    />
                <TextView
                    android:text="জীববিজ্ঞান"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:id="@+id/item_title"
                    android:layout_toEndOf="@+id/item_image_sub2"
                    android:layout_alignParentTop="true"
                    android:textSize="30sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    />

                <TextView
                    android:text="২য় পত্র"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:id="@+id/item_detail"
                    android:layout_toEndOf="@+id/item_image_sub2"
                    android:layout_below="@+id/item_title"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    />

            </RelativeLayout>
        </android.support.v7.widget.CardView>




    </LinearLayout>


</ScrollView>