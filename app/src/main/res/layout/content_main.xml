<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#1ABC9C">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#1ABC9C"
    >

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/card_view1"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="8dp"
        card_view:cardBackgroundColor="#27AE60"
        card_view:cardCornerRadius="12dp"
        card_view:cardElevation="3dp"
        card_view:contentPadding="4dp"
        android:foreground="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        >

        <FrameLayout
            android:background="#FFFFFF"
            android:layout_width="4dp"
            android:layout_height="match_parent"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:src="@drawable/icons8_caduceus_96"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/item_image"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="12dp"
                />
            <TextView
                android:text="মেডিকেল/ডেন্টাল"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:id="@+id/item_title"
                android:layout_toEndOf="@+id/item_image"
                android:layout_alignParentTop="true"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                />

            <TextView
                android:text="ভর্তি পরীক্ষা"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:id="@+id/item_detail"
                android:layout_toEndOf="@+id/item_image"
                android:layout_below="@+id/item_title"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/card_view2"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"
        card_view:cardBackgroundColor="#27AE60"
        card_view:cardCornerRadius="12dp"
        card_view:cardElevation="3dp"
        card_view:contentPadding="4dp"
        android:foreground="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true">


        <FrameLayout
            android:background="#FFFFFF"
            android:layout_width="4dp"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:src="@drawable/icons8_microscope_64"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/item_image2"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="12dp"
                />
            <TextView
                android:text="ভার্সিটি"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:id="@+id/item_title2"
                android:layout_toEndOf="@+id/item_image2"
                android:layout_alignParentTop="true"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                />

            <TextView
                android:text="জীববিজ্ঞান"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:id="@+id/item_detail2"
                android:layout_toEndOf="@+id/item_image2"
                android:layout_below="@+id/item_title2"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/card_view3"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        card_view:cardBackgroundColor="#27AE60"
        card_view:cardCornerRadius="12dp"
        card_view:cardElevation="3dp"
        card_view:contentPadding="4dp"
        android:foreground="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <FrameLayout
            android:background="#FFFFFF"
            android:layout_width="4dp"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:src="@drawable/icons8_document_48"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/item_image3"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="12dp"
                />
            <TextView
                android:text="নোটিশ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:id="@+id/item_title3"
                android:layout_toEndOf="@+id/item_image3"
                android:layout_alignParentTop="true"
                android:textSize="30sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                />



        </RelativeLayout>
    </android.support.v7.widget.CardView>




</LinearLayout>
</ScrollView>